<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manageDbFragments.InsertFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/selectBranch_header"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:text="Select Branch*"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="@dimen/_12ssp"
            android:textStyle="normal" />

        <Spinner
            android:id="@+id/branchSpinner"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/selectCourse_header"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:text="Select Course*"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="@dimen/_12ssp"
            android:textStyle="normal" />

        <Spinner
            android:id="@+id/courseSpinner"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/selectCourseDuration_header"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:text="Course Duration"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="@dimen/_12ssp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/courseDurationTxt"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:inputType="text"
            android:paddingStart="@dimen/_14sdp"
            android:paddingEnd="@dimen/_14sdp"
            android:hint="(edit if necessary)"
            android:background="@drawable/input_field" />

        <TextView
            android:id="@+id/selectSemester_header"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:text="Total Semesters"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="@dimen/_12ssp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/semesterTxt"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:inputType="text"
            android:paddingStart="@dimen/_14sdp"
            android:paddingEnd="@dimen/_14sdp"
            android:hint="(edit if necessary)"
            android:background="@drawable/input_field" />

        <TextView
            android:id="@+id/errorTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="***"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/_12ssp"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp">

            <Button
                android:id="@+id/submitBtn"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_38sdp"
                android:background="@drawable/filled_btn2"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/green"
                android:textSize="@dimen/_14ssp" />

            <android.widget.Button
                android:id="@+id/cancelBtn"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_14sdp"
                android:background="@drawable/unfilled_btn2"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_14ssp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>